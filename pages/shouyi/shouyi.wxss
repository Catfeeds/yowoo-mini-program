.userinfo {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 120rpx;
  padding: 0 30rpx;
}
.userinfo view {
  font-size: 30rpx;
  padding-left: 30rpx;
}
.userinfo image {
  height: 88rpx;
  width: 88rpx;
  border-radius: 44rpx;
}


 .background-img {
   height: 460rpx;
   width:100%;
   position: relative;
   z-index: 1;
 } 

 .yue {
   position: absolute;
   top: 205rpx;
   left: 30rpx;
   text-align: center;
   color: #fff;
   font-size: 28rpx;
   width: 690rpx;
   z-index: 10;
 }

 .price {
   position: absolute;
   z-index: 10;
   top: 280rpx;
   text-align: center;
   color: #fff;
   font-size: 150rpx;
   width: 690rpx;
   left: 30rpx;
 }

.tixian {
   position: absolute;
   z-index: 10;
   top: 470rpx;
   left: 570rpx;
   height: 48rpx;
}
.tixian button {
  background: transparent;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 48rpx;
  border: 1rpx solid #fff;
  padding:0 15rpx;
}
.tixian button::after {
  border: 0;
}

.scroll-view {
  border-radius: 12rpx;
}

/*收益明细*/
.con {
  width: 100%;
  height: 140rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #DCE0E0;
}
.con .type {
  font-size: 32rpx;
}
.con .desc {
  color: #9F9DA3;
  font-size: 24rpx;
  padding-top: 15rpx;
  line-height: 24rpx;
}
.con .amount {
  font-size: 32rpx;
}
.con .time {
  color: #E7E1E1;
  font-size: 24rpx;
  padding-top: 15rpx;
  line-height: 24rpx;
}
/*icon*/
.shouyi-icon::after {
  font-family: 'iconfont';
  content:'\e651';
  font-size: 120rpx;
  color: #E7E1E1;
}



/*下拉刷新*/
movable-area{
  height: 300rpx;
  width: 750rpx;
  position: absolute;
  top: 0;
}
movable-view {
  position: relative;
  z-index: 9999;
  height: 50%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.refresh-icon::after {
  font-family: 'iconfont';
  content:'\e64e';
  color: #FE5F5F;
  font-size: 48rpx;
}