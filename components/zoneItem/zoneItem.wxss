/* components/zoneItem/zoneItem.wxss */
.flex-container {
    display: flex;
    align-items: center;
} 
.zoneItem {
    padding: 30rpx;
    background:#fff;
    height: 212rpx;
  position: relative; box-sizing: border-box;
    border-bottom: 1rpx solid #EFEFEF;
}
.zoneItem image{
    width: 202rpx;
    height: 152rpx;
}
.zoneItem .title {
    font-size: 30rpx;
    line-height: 30rpx;
    color: #263547;
    max-width: 458rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.font-contaienr {
    margin: 0;
    padding: 0;
    margin-left: 30rpx;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: flex-start;
    height: 150rpx;
}

.addr-container {
    margin-top: 52rpx;
    color: #D2CDCD;    
    font-size: 24rpx;
    line-height: 24rpx;
    max-width: 438rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.home-num {
    padding-top: 20rpx;
    font-size: 26rpx;
    line-height: 26rpx;    
    color: #9F9DA3;
}
.icon-container {
  position: absolute;
  top:5rpx;
  left: 38rpx;
  width: 44rpx;
  height: 50rpx;
}
.icon-container .font {
  font-size: 18rpx;
  display: inline-block;
  width: 75rpx;
  height: 18rpx;
  position: absolute;
  top: 7rpx;
  left: 20rpx;
  color:#fff;
}

/*icon*/
.addr-icon::after {
    font-family: 'iconfont';
    content:'\e613';
    font-size: 20rpx;
    padding-right: 11rpx;
    line-height: 24rpx;
}

.wuye-icon::after {
  font-family: 'iconfont';
    content:'\e624';
    color:#FE5F5F;
    font-size: 72rpx;    
}

.gongyu-icon::after {
  font-family: 'iconfont';
    content:'\e624';
    color:#37BC9B;
    font-size: 72rpx;
}