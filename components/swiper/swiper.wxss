/* components/swiper/swiper.wxss */
swiper {
  width: 750rpx;
  height:564rpx;
  position: relative;
}
.image {
  width: 100%;
  height:564rpx;
}

.dots-container text{
  display: inline-block;
  border:1rpx solid #fff;
  height: 8rpx;
  width: 8rpx;
  margin: 10rpx 10rpx;
  border-radius: 50%;
}
.select{
  background: #fff;
}
.dots-container {
  display: flex;
  width:100%; 
  justify-content: center;
  align-items: center;
  position:absolute;
  top: 470rpx;
  left: 0;
}